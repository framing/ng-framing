{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@framing/ng-core": ["../../../dist/packages-dist/ng-core"]
    },
    "outDir": "../../../dist/packages-dist/ng-security",

    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    // don't auto-discover @types/node, it results in a ///<reference in the .d.ts output
    "types": []
  },
  "files": [
    "index.ts"
  ]
}
